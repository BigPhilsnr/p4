<% layout('layout') -%>
<div class="col-sm-offset-1 col-sm-6 form-box">
                        	<div class="form-top">
                        		<div class="form-top-left">
                        			<h3>Sign up Today</h3>
                            		<p>Fill in your details to get started</p>
                        		</div>
                        		<div class="form-top-right">
                        			<i class="fa fa-pencil"></i>
                        		</div>
                            </div>
                            <div class="form-bottom">
			                    <form role="form" action="/register" method="post" class="login-form">
			                    	<div class="form-group">
			                    		<label class="sr-only" for="form-username">Username</label>
			                        	<input type="text" name="email" placeholder="Email..." class="form-username form-control" id="form-username">
                                    </div>
                                  <div class="form-group">
			                    		<label class="sr-only" for="form-username">Username</label>
			                        	<input type="text" name="contact" placeholder="Contact..." class="form-username form-control" id="form-username">
                                    </div>
                                <div class="form-group">
			                    		<label class="sr-only" for="form-username">Username</label>
                                        
                                        <select class="form-control form-username" name="residence" >
                                            <option value="mariakani" default>Choose Location</option>
											<option value="Mariakani">Mariakani</option>
											<option value="KenyaRe">KenyaRe</option>
											<option value="bush">Bush</option>
											<option value="Centre">Centre</option>
											<option value="KonaKubwa">KonaKubwa</option>
											<option value="Mlima">Mlima</option>
                                        </select>
                                    </div>
                                                           
			                        <div class="form-group">
			                        	<label class="sr-only" for="form-password">Password</label>
			                        	<input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
                                    </div>
                                    <div class="form-group">
			                        	<label class="sr-only" for="form-password">Password</label>
			                        	<input type="password" name="password2" placeholder="Confirm password..." class="form-password form-control" id="form-password">
			                        </div>
			                        <button type="submit" class="btn">Sign Up!</button>
                                </form>
                                
                                                    
		                    </div>
						</div>
						
<div class="col-sm-5 form-box ">

<div id="myCarousel" class="carousel slide" data-ride="carousel">
 

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
